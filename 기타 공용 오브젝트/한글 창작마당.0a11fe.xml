  </Panel>

  <Panel
    class="tilePanel"
    position="0 -25 -21"
    width="99"
    height="99"
    padding="0 0 0 0"
    color="black">
  </Panel>

  <Panel
    class="deckSelectorPanel"
    position="0 -1400 -2"
    width="1500"
    height="2500"
    padding="10 10 10 10"
    color="Black">
  </Panel>

  <Panel
    class="settingsPanel"
    position="795 -589 -2"
    width="510"
    height="563"
    padding="10 10 10 10"
    color="Black">
  </Panel>

  <Panel
    class="zonePanel"
    position="800 -1162.5 -2"
